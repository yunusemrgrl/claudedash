{
  "name": "agent-scope",
  "version": "0.3.0",
  "description": "Deterministic, local, passive execution observer for AI agent workflows",
  "type": "module",
  "bin": {
    "agent-scope": "dist/cli.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx watch src/cli.ts start",
    "build": "tsc && cd dashboard && npm run build",
    "build:core": "tsc",
    "build:dashboard": "cd dashboard && npm run build",
    "test": "vitest --run",
    "test:coverage": "vitest --coverage",
    "version": "node scripts/sync-version.mjs && git add dashboard/package.json src/cli.ts"
  },
  "keywords": [
    "agent",
    "observer",
    "workflow",
    "ai",
    "monitoring",
    "task-tracking",
    "ai-agents",
    "execution-observer",
    "workflow-management"
  ],
  "author": "Yunus Emre Gurlu <yunusemregurlu@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yunusemrgrl/agent-scope.git"
  },
  "bugs": {
    "url": "https://github.com/yunusemrgrl/agent-scope/issues"
  },
  "homepage": "https://github.com/yunusemrgrl/agent-scope#readme",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/static": "^7.0.4",
    "chokidar": "^5.0.0",
    "commander": "^12.0.0",
    "fastify": "^4.26.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@vitest/coverage-v8": "^1.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
